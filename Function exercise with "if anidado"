let free= false
const validarCliente =(time)=>{
    let edad=prompt("¿Cuál es tu edad?");
if(edad >= 18){
    if (time >= 2 && time < 7 && free == false) {
        alert("puedes pasar gratis por ser la primera persona en entrar después de las 2 AM");
        free = true;
    } else {
        alert (`son las ${time}: 00Hs y puedes pasar, pero tienes que pagar la entrada`);
    }
} else {
    alert("No puedes pasar porque no tienes la edad requeridad")
}

}

validarCliente(23)
validarCliente(24)
validarCliente(10)
validarCliente(1)
validarCliente(3)
validarCliente(0.6)
